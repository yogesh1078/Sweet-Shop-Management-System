{
  "name": "sweet-shop-management",
  "version": "1.0.0",
  "description": "A comprehensive Sweet Shop Management System built with MERN stack",
  "main": "server/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/src/server.js",
    "client": "cd client && npm start",
    "start": "node server/src/server.js",
    "seed:admin": "node server/scripts/seedAdmin.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["sweet-shop", "mern", "javascript", "mongodb", "express", "react"],
  "author": "Sweet Shop Developer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
